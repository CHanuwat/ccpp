<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="ccpp_wizard_cancel_action" model="ir.actions.act_window">
        <field name="name">Cancel</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ccpp.wizard.cancel</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="ccpp_wizard_cancel_view_form" model="ir.ui.view">
        <field name="name">ccpp.wizard.cancel.view.form</field>
        <field name="model">ccpp.wizard.cancel</field>
        <field name="arch" type="xml">
            <form string="Cancel">
                <sheet>
                    <group>
                        <group>
                            <field name="ccpp_id" attrs="{'invisible': [('ccpp_id','=',False)]}" readonly="True" force_save="True"/>
                            <field name="solution_id" attrs="{'invisible': [('solution_id','=',False)]}" readonly="True" force_save="True"/>
                            <field name="strategy_id" attrs="{'invisible': [('strategy_id','=',False)]}" readonly="True" force_save="True"/>
                            <field name="reason_cancel" required="True"/>
                            
                        </group>
                    </group>
                    <footer>
                        <button name="button_confirm" string="Cancel" type="object" class="btn-danger"/>
                        <button special="cancel" data-hotkey="z" string="Close" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
    
</odoo>